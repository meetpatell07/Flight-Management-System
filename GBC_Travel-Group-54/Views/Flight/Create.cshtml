@model GBC_Travel_Group_54.Models.Flight
@{
    ViewData["Title"] = "Create Flight";
}

<h2>Create Flight</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FlightId" class="control-label"></label>
        <input asp-for="FlightId" class="form-control" />
        <span asp-validation-for="FlightId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureAirport" class="control-label"></label>
        <input asp-for="DepartureAirport" class="form-control" />
        <span asp-validation-for="DepartureAirport" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalAirport" class="control-label"></label>
        <input asp-for="ArrivalAirport" class="form-control" />
        <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Airline" class="control-label"></label>
        <input asp-for="Airline" class="form-control" />
        <span asp-validation-for="Airline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartureDateTime" class="control-label"></label>
        <input asp-for="DepartureDateTime" class="form-control" />
        <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalDateTime" class="control-label"></label>
        <input asp-for="ArrivalDateTime" class="form-control" />
        <span asp-validation-for="ArrivalDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-warning">Cancel</a>

    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}