@model IEnumerable<GBC_Travel_Group_54.Models.Passenger>
@{
    ViewData["Title"] = "Passenger List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Passenger ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var passenger in Model)
        {
            <tr>
                <td>@passenger.PassengerId</td>
                <td>@passenger.FirstName</td>
                <td>@passenger.LastName</td>
                <td>@passenger.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@passenger.PassengerId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@passenger.PassengerId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@passenger.PassengerId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Passenger</a>
<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
