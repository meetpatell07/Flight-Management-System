@model GBC_Travel_Group_54.Models.Hotel

@{
    ViewData["Title"] = "Edit Hotel";
}

<h2>Edit Hotel</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="HotelId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumGuest" class="control-label">Number of Guests</label>
        <input asp-for="NumGuest" class="form-control" />
        <span asp-validation-for="NumGuest" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label">Location</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricingPerNight" class="control-label">Pricing Per Night</label>
        <input asp-for="PricingPerNight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PricingPerNight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating</label>
        <input asp-for="Rating" type="number" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Amenities</label>
        <div class="form-group">
            <label for="selectedAmenities">Select Amenities:</label>
            @Html.ListBox("selectedAmenities", ViewBag.PredefinedAmenities, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
