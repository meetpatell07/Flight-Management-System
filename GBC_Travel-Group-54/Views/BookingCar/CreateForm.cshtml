@model GBC_Travel_Group_54.Models.BookingCar

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="PassengerId" />

    <h2>Create Booking</h2>

    @if (Model.Car != null)
    {
        <div>
            <h3>Car Details</h3>
            <p>Make: @Model.Car.Make</p>
            <p>Model: @Model.Car.Model</p>
            <p>Year: @Model.Car.Year</p>
            <p>Rental Companies: @Model.Car.RentalCompanies</p>
            <p>Rental Price Per Day: @Model.Car.RentalPricePerDay</p>
            <p>Available: @Model.Car.IsAvailable</p>
            <p>Number of Passengers: @Model.Car.NumPassenger</p>


            <!-- Add other car details as needed -->
        </div>
    }

    @if (Model.Passenger != null)
    {
        <div>
            <h3>Passenger Details</h3>
            <p>Name: @Model.Passenger.FirstName</p>
            <p>Last Name: @Model.Passenger.LastName</p>
            <p>Email: @Model.Passenger.Email</p>
            <!-- Add other passenger details as needed -->
        </div>

    }

    <div class="form-group">
        <label for="PickUpLocation">Pick-up Location:</label>
        <input type="text" asp-for="PickUpLocation" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="DropOffLocation">Drop-off Location:</label>
        <input type="text" asp-for="DropOffLocation" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="PickUpDate">PickUpDate:</label>
        <input type="date" asp-for="PickUpDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="DropOffDate">DropOffDate:</label>
        <input type="date" asp-for="DropOffDate" class="form-control" required />
    </div>

    <button type="submit">Create Booking</button>
    <a asp-action="Index" asp-controller="Car" class="btn btn-primary">Cancel</a>
</form>
